<%= render 'shared/nav' %>

<table class=" table table-striped sortable" border="1px solid black">
  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th>Wins</th>
      <th>Losses</th>
      <th>Win Percentage</th>

    </tr>
  </thead>

 <tbody>
   <% @records.each do |record| %>
     <tr>
      <td><%= record.user.name %></td>
      <td><%= record.category.category %></td>
      <td><%= record.wins %> <%= link_to "Add Victory", :action => "add_victory", :user_id => record.user_id, :category_id => record.category_id %></td>
      <td><%= record.losses %> <%= link_to "Add Loss", :action => "add_loss", :user_id => record.user_id, :category_id => record.category_id %></td>
      <td><%= number_with_precision(100 * record.wins / ((record.losses + record.wins).nonzero? || 1 ), precision: 0)     %> %</td>
    </tr>
   <% end %>
 </tbody>